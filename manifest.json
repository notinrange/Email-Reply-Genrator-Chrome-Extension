{
    "manifest_version": 3,
    "name": "Email Writer Assistant",
    "version": "1.0",  
    "description": "Assistant",
    "permission":["activeTab","storage"],
    "host_permissions":[
        "http://localhost:8080/*",
        "*://mail.google.com/*"
    ],
    "action":{
        "default_title":"Email Writer Assistant"
    },
    "content_scripts": [
        {
        "js": ["content.js"],
        "matches": ["*://mail.google.com/*"],
        "css" : ["content.css"],
        "run_at" : "document_end"
        }
    ],
    "web_accessiible_resources":[
        {
            "resources":["icons/*"],
            "matches" : ["*://mail.google.com/*"]
        }
    ]
  
    
}
  